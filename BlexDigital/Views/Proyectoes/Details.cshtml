@if (Model.Diseno1 != null)
{
    <h2>PROPUESTAS DE DISEÑO</h2>

    <div class="col-md-4">
        <h4>PROPUESTA 1</h4>
        <img src="@Url.Content(Model.Diseno1)" height="200" width="300" alt="Propuesta de diseño 1" width="500" height="600">

    </div>
    <div class="col-md-4">
        <h4>PROPUESTA 2</h4>
        <img src="@Url.Content(Model.Diseno2)" height="200" width="300" alt="Propuesta de diseño 2" width="500" height="600">

    </div>
    <div class="col-md-4">
        <h4>PROPUESTA 3</h4>
        <img src="@Url.Content(Model.Diseno3)" height="200" width="300" alt="Propuesta de diseño 3" width="500" height="600">

    </div>




    using (Html.BeginForm())
    {
        <hr />
        <hr />
        <hr />
        <hr />
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ProyectoId)

        @Html.LabelFor(model => model.DisenoElegido, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DisenoElegido, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DisenoElegido, "", new { @class = "text-danger" })
        </div>

        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Elegir diseño" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    if (Model.Estado == "Implementación" && HttpContext.Current.User.IsInRole("Admin"))
    {
        using (Html.BeginForm("ConfirmarFin"))
        {
            <hr />
            <hr />
            <hr />
            <hr />
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ProyectoId)

            @Html.LabelFor(model => model.UrlProyecto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UrlProyecto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UrlProyecto, "", new { @class = "text-danger" })
            </div>

            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Confirmar Finalización" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    }

    if (Model.Estado == "Finalizado")
    {
        <div class="col-md-offset-2 col-md-10">
            <a href="Url.Content(Model.File)" target="_blank">Visita el proyecto finalizado</a>
        </div>
    }


    if (Model.DisenoElegido > 0)
    {
        <hr />
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.DisenoElegido)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DisenoElegido)
            </dd>
        </dl>
    }
}
